# OPENAI_MODEL=gpt-4

# AI提供商选择: deepseek | tongyi | openai | company
# AI_PROVIDER=deepseek

# AI请求超时（秒）
AI_REQUEST_TIMEOUT=120

# AI最大重试次数
AI_MAX_RETRIES=3

# AI重试间隔（秒）
AI_RETRY_DELAY=1.0

# 最大文本长度（字符）
AI_MAX_TEXT_LENGTH=15000

# 噪声词过滤（逗号分隔，用于过滤字幕、背景音等干扰内容）
AI_NOISE_WORDS=字幕by索兰娅,字幕,索兰娅,suolan,字幕制作,subtitle

